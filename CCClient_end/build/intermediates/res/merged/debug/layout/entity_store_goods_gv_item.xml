<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_entity_log"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_marginTop="5dp"
        android:background="@null"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tv_entity_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="售价:60"
        android:textColor="#f00"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_entity_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:minLines="2"
        android:text="门票 "
        android:textColor="@color/col_72"
        android:textSize="13sp" />

</LinearLayout><!-- From: file:/D:/waibaoworkpace/CCClient_end/res/layout/entity_store_goods_gv_item.xml -->