<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ececec"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_title"
        style="@style/header_style" >

        <TextView
            android:id="@+id/tv_header_title"
            style="@style/header_title_tv_style"
            android:text="编辑商品" />

        <ImageButton
            android:id="@+id/ib_upload_goods_close"
            style="@style/header_left_close_style" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/et_upload_goods_name1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/apply_open_shop_edit_bg"
            android:gravity="center_vertical"
            android:hint="输入物品名称(小于30个字符)"
            android:maxLength="30"
            android:minHeight="30dp"
            android:paddingLeft="5dp"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/et_upload_goods_num1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/apply_open_shop_edit_bg"
            android:hint="输入商品库存数量"
            android:paddingLeft="5dp"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/et_upload_goods_price1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/apply_open_shop_edit_bg"
            android:hint="输入商品售价"
            android:paddingLeft="5dp"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/et_upload_goods_detail1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/apply_open_shop_edit_bg"
            android:gravity="start"
            android:hint="输入商品简介"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:textSize="13sp" />

        <LinearLayout
            android:id="@+id/upload_kd_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/apply_open_shop_edit_bg"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/checkbox_goods_kd1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="包邮" />

            <CheckBox
                android:id="@+id/checkbox_goods_kd2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="送货上门" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_edit_goods"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/selector_btn"
            android:text="确定修改"
            android:textColor="@drawable/selector_btntxt"
            android:textSize="13sp" />
    </LinearLayout>

</LinearLayout><!-- From: file:/D:/waibaoworkpace/CCClient_end/res/layout/activity_editgoodsdetail.xml -->