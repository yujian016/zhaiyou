<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/item_order_goodsdetail_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/item_order_goodsdetail_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="2"
            android:text="联想笔记本"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/item_order_goodsdetail_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="商品价格：520.00元"
            android:textColor="@color/red" />

        <TextView
            android:id="@+id/item_order_goodsdetail_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="数量：1"
            android:textColor="@color/col_102" />
    </LinearLayout>

</LinearLayout><!-- From: file:/D:/waibaoworkpace/CCClient_end/res/layout/item_order_goodsdetail.xml -->