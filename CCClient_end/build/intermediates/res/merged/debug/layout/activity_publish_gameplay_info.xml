<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_apply"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ececec"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_title"
        style="@style/header_style" >

        <TextView
            android:id="@+id/tv_header_title"
            style="@style/header_title_tv_style"
            android:text="发布游戏代练" />

        <ImageButton
            android:id="@+id/ib_pub_second_close"
            style="@style/header_left_close_style" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/apply_open_shop_bg" >

                <!-- 店铺名称 -->

                <TextView
                    android:id="@+id/tv_input_second_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="35dp"
                    android:text="游戏名" />

                <EditText
                    android:id="@+id/et_second_info_name"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_toRightOf="@+id/tv_input_second_title"
                    android:background="@drawable/apply_open_shop_edit_bg"
                    android:hint="请输入游戏名"
                    android:paddingLeft="5dp"
                    android:textSize="13sp" />

                <!-- 店铺简介 -->

                <TextView
                    android:id="@+id/tv_input_second_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/et_second_info_name"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:text="代练描述" />

                <EditText
                    android:id="@+id/et_second_shop_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/et_second_info_name"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@id/tv_input_second_detail"
                    android:background="@drawable/apply_open_shop_edit_bg"
                    android:gravity="start"
                    android:hint="请输入描述"
                    android:inputType="textMultiLine"
                    android:minLines="6"
                    android:paddingLeft="5dp"
                    android:paddingTop="2dp"
                    android:textSize="13sp" />

                <!-- 上传图片 -->

                <TextView
                    android:id="@+id/tv_seond_upload_log1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/et_second_shop_info"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:text="上传图片" />

                <LinearLayout
                    android:id="@+id/iv_seond_upload_loglayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/et_second_shop_info"
                    android:layout_toRightOf="@+id/tv_seond_upload_log1"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/iv_seond_upload_log1"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/apply_open_shop_edit_bg"
                        android:scaleType="fitXY"
                        android:src="@drawable/addpic" />

                    <ImageView
                        android:id="@+id/iv_seond_upload_log2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/apply_open_shop_edit_bg"
                        android:scaleType="fitXY"
                        android:src="@drawable/addpic" />

                    <ImageView
                        android:id="@+id/iv_seond_upload_log3"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/apply_open_shop_edit_bg"
                        android:scaleType="fitXY"
                        android:src="@drawable/addpic" />
                </LinearLayout>
                <!-- 价格 -->

                <TextView
                    android:id="@+id/et_input_phone_pricetv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_seond_upload_loglayout"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="28dp"
                    android:text="联系人" />

                <EditText
                    android:id="@+id/et_input_phone_price"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@+id/iv_seond_upload_loglayout"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/et_input_phone_pricetv"
                    android:background="@drawable/apply_open_shop_edit_bg"
                    android:hint="请输入联系人"
                    android:paddingLeft="5dp"
                    android:textSize="13sp" />

                <!-- 联系电话 -->

                <TextView
                    android:id="@+id/tv_input_phone_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/et_input_phone_pricetv"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="28dp"
                    android:text="联系电话" />

                <EditText
                    android:id="@+id/et_input_phone_no"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@+id/et_input_phone_pricetv"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/tv_input_phone_no"
                    android:background="@drawable/apply_open_shop_edit_bg"
                    android:hint="输入联系电话"
                    android:paddingLeft="5dp"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_input_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_input_phone_no"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="28dp"
                    android:text="联系地址" />

                <EditText
                    android:id="@+id/et_input_phono"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@+id/et_input_phone_no"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/tv_input_phone_no"
                    android:background="@drawable/apply_open_shop_edit_bg"
                    android:hint="请输入联系地址"
                    android:paddingLeft="5dp"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_input_empty"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:layout_below="@+id/et_input_phone_no"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="16dp"
                    android:text="" />
            </RelativeLayout>

            <Button
                android:id="@+id/btn_publish_second_info"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/selector_btn"
                android:text="确定发布"
                android:textColor="@drawable/selector_btntxt"
                android:textSize="13sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout><!-- From: file:/D:/waibaoworkpace/CCClient_end/res/layout/activity_publish_gameplay_info.xml -->