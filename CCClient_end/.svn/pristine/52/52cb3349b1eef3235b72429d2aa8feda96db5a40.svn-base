<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_apply"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ececec"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_title"
        style="@style/header_style" >

        <TextView
            android:id="@+id/tv_header_title"
            style="@style/header_title_tv_style"
            android:text="申请开店" />

        <ImageButton
            android:id="@+id/ib_apply_shop_close"
            style="@style/header_left_close_style" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/apply_open_shop_bg" >

                <!-- 店铺名称 -->

                <TextView
                    android:id="@+id/tv_input_shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="35dp"
                    android:text="输入店名" />

                <EditText
                    android:id="@+id/et_apply_shop_name"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_toRightOf="@+id/tv_input_shop_name"
                    android:background="@drawable/apply_open_shop_edit_bg"
                    android:hint="店铺名称不允许修改"
                    android:paddingLeft="5dp"
                    android:textSize="13sp" />

                <!-- 店铺简介 -->

                <TextView
                    android:id="@+id/tv_input_shop_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/et_apply_shop_name"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:text="输入简介" />

                <EditText
                    android:id="@+id/et_apply_shop_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/et_apply_shop_name"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@id/tv_input_shop_detail"
                    android:background="@drawable/apply_open_shop_edit_bg"
                    android:gravity="start"
                    android:hint="输入店铺简介"
                    android:inputType="textMultiLine"
                    android:minLines="6"
                    android:paddingLeft="5dp"
                    android:paddingTop="2dp"
                    android:textSize="13sp" />

                <!-- 经营类别 -->

                <TextView
                    android:id="@+id/tv_select_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/et_apply_shop_info"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="28dp"
                    android:text="经营类别" />

                <Spinner
                    android:id="@+id/apply_shop_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_below="@+id/et_apply_shop_info"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@id/tv_select_category"
                    android:background="@drawable/apply_open_shop_edit_bg" />

                <!-- 上传店招 -->

                <TextView
                    android:id="@+id/tv_select_shop_log"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/apply_shop_spinner"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:text="上传店招" />

                <ImageView
                    android:id="@+id/iv_apply_select_shop_log"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_below="@+id/apply_shop_spinner"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/tv_select_shop_log"
                    android:background="@drawable/apply_open_shop_edit_bg"
                    android:scaleType="centerInside"
                    android:src="@drawable/apply_plus" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_select_shop_log"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:text="(图片100x100\n像素png格式)"
                    android:textColor="#f00"
                    android:textSize="10sp" />

                <!-- 身份证 -->

                <TextView
                    android:id="@+id/tv_input_idcard_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_apply_select_shop_log"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="28dp"
                    android:text="身份证号" />

                <EditText
                    android:id="@+id/et_input_idcard_no"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@+id/iv_apply_select_shop_log"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/tv_input_idcard_no"
                    android:background="@drawable/apply_open_shop_edit_bg"
                    android:hint="输入身份证号码"
                    android:paddingLeft="5dp"
                    android:textSize="13sp" />

                <!-- 学生证 -->

                <TextView
                    android:id="@+id/tv_input_stucard_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_input_idcard_no"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="28dp"
                    android:text="学生证号" />

                <EditText
                    android:id="@+id/et_input_stucard_no"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@+id/et_input_idcard_no"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/tv_input_stucard_no"
                    android:background="@drawable/apply_open_shop_edit_bg"
                    android:hint="输入学生证号"
                    android:paddingLeft="5dp"
                    android:textSize="13sp" />

                <!-- 所在班级 -->

                <TextView
                    android:id="@+id/tv_input_stu_class"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_input_stucard_no"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="28dp"
                    android:text="联系电话" />

                <EditText
                    android:id="@+id/et_input_stu_class"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@+id/et_input_stucard_no"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/tv_input_stu_class"
                    android:background="@drawable/apply_open_shop_edit_bg"
                    android:hint="输入手机号码"
                    android:paddingLeft="5dp"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_input_empty"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:layout_below="@+id/tv_input_stu_class"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="" />
            </RelativeLayout>

            <Button
                android:id="@+id/btn_apply_open_shop"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/selector_btn"
                android:text="申请开店"
                android:textColor="@drawable/selector_btntxt"
                android:textSize="13sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>