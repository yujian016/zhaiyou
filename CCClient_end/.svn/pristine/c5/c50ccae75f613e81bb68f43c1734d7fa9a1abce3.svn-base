<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/item_digitalrepair_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/item_digitalrepair_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="上门维修电脑"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/item_digitalrepair_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="本公司上门维修各种电脑本公司上门维修各种电脑本公司上门维修各种电脑本公司上门维修各种电脑本公司上门维修各种电脑本公司上门维修各种电脑本公司上门维修各种电脑本公司上门维修各种电脑本公司上门维修各种电脑"
            android:textColor="#77000000"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>