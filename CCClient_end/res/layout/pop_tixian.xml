<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="30dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/corners_pop_proxystocktip_bg"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            android:text="提现"
            android:textColor="@color/col_72"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@color/fildpwd_textbg_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/addsuggestcomment_ok"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:text="提现到"
                android:textColor="@color/col_72" />

            <View
                android:layout_width="0.6dp"
                android:layout_height="match_parent"
                android:background="@color/fildpwd_textbg_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/pop_tixian_bank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="true"
                        android:text="银行卡" />

                    <RadioButton
                        android:id="@+id/pop_tixian_alipay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="false"
                        android:text="支付宝" />
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@color/fildpwd_textbg_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:text="银行名称"
                android:textColor="@color/col_72" />

            <View
                android:layout_width="0.6dp"
                android:layout_height="match_parent"
                android:background="@color/fildpwd_textbg_color" />

            <EditText
                android:id="@+id/pop_tixian_draw_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:hint="请输入银行名称"
                android:padding="8dp"
                android:textColor="@color/col_72"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@color/fildpwd_textbg_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:text="银行/支付宝账号"
                android:textColor="@color/col_72" />

            <View
                android:layout_width="0.6dp"
                android:layout_height="match_parent"
                android:background="@color/fildpwd_textbg_color" />

            <EditText
                android:id="@+id/pop_tixian_draw_blank_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:hint="请输入银行或支付宝账号"
                android:padding="8dp"
                android:textColor="@color/col_72"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@color/fildpwd_textbg_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:text="真实姓名"
                android:textColor="@color/col_72" />

            <View
                android:layout_width="0.6dp"
                android:layout_height="match_parent"
                android:background="@color/fildpwd_textbg_color" />

            <EditText
                android:id="@+id/pop_tixian_real_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:hint="请输入真实姓名"
                android:padding="8dp"
                android:textColor="@color/col_72"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@color/fildpwd_textbg_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:text="提现金额"
                android:textColor="@color/col_72" />

            <View
                android:layout_width="0.6dp"
                android:layout_height="match_parent"
                android:background="@color/fildpwd_textbg_color" />

            <EditText
                android:id="@+id/pop_tixian_draw_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:hint="请输入提现金额"
                android:padding="8dp"
                android:textColor="@color/col_72"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@color/fildpwd_textbg_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/pop_tixian_cancel"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="8dp"
                android:text="取消"
                android:textColor="@color/col_72" />

            <View
                android:layout_width="0.6dp"
                android:layout_height="match_parent"
                android:background="@color/fildpwd_textbg_color" />

            <TextView
                android:id="@+id/pop_tixian_submit"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="8dp"
                android:text="立即提现"
                android:textColor="@color/col_72" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>