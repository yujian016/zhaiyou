<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/item_secondarytrade_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:src="@drawable/logo_28" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/item_secondarytrade_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="物品名称"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/item_secondarytrade_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="物品描述，描述说明"
            android:textColor="#77000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_secondarytrade_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="预算：100元"
            android:textColor="#f00"
            android:textSize="13sp" />
    </LinearLayout>

</LinearLayout>