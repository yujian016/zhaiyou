<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/fragment_order2_myorder1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#1FADFF"
            android:gravity="center"
            android:text="店铺购物订单"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/col_235" />

        <TextView
            android:id="@+id/fragment_order2_myorder2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="我的二手订单"
            android:textColor="@color/col_72"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/col_235" />

        <TextView
            android:id="@+id/fragment_order2_myorder3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="校园购物订单"
            android:textColor="@color/col_72"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/col_235" />
    </LinearLayout>

    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@color/col_235" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <com.ccc.www.view.XListView
            android:id="@+id/order_fragment_order2_xlistview1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.ccc.www.view.XListView
            android:id="@+id/order_fragment_order2_xlistview2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <com.ccc.www.view.XListView
            android:id="@+id/order_fragment_order2_xlistview3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>