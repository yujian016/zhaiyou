<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/iv_gb_goods_logo"
        android:layout_width="85dp"
        android:layout_height="90dp"
        android:layout_margin="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/c" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_gb_goods_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
			android:gravity="left|center"
            android:text="小猫的店铺"
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_gb_goods_person"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left|center"
            android:text="参团率:60%"
            android:textColor="#ccc"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_gb_goods_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="￥100"
                    android:textColor="#1FADFF"
                    android:textSize="12sp" />
                
                <Button
			        android:id="@+id/btn_add_rb"
			        android:layout_weight="1"
			        android:layout_width="15dp"
			        android:layout_height="20dp"
			        android:background="@drawable/selector_btn"
			        android:text="立即购买"
			        android:textColor="@drawable/selector_btntxt"
			        android:textSize="10sp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>