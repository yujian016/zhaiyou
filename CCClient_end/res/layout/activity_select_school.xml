<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_title"
        style="@style/header_style" >

        <TextView
            android:id="@+id/tv_select_school_title"
            style="@style/header_title_tv_style"
            android:text="选择学校" />

        <ImageButton
            android:id="@+id/ib_select_school_goback"
            style="@style/header_left_goback_style" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header_bg" >

        <EditText
            android:id="@+id/et_select_school_search"
            style="@style/header_search_style"
            android:hint="输入学校名字" />

        <ImageButton
            android:id="@+id/btn_select_school_search"
            style="@style/header_search_btn_style" />
    </RelativeLayout>

    <ListView
        android:id="@+id/lv_select_school"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:divider="#ccc"
        android:dividerHeight="1dp" >
    </ListView>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#ccc" />

</LinearLayout>