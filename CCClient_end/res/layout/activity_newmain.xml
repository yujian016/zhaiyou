<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@android:id/tabhost"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_bg" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="50dp" />

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="40dp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/group_top"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:orientation="horizontal" >

            <RadioGroup
                android:id="@+id/rg_home"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ececec"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/rb_home"
                    style="@style/radio_btn_style"
                    android:drawableTop="@drawable/selector_tab_home"
                    android:text="首页" />

                <RadioButton
                    android:id="@+id/rb_shop"
                    style="@style/radio_btn_style"
                    android:drawableTop="@drawable/selector_tab_shop"
                    android:text="店铺" />

                <RadioButton
                    android:id="@+id/rb_moneybag"
                    style="@style/radio_btn_style"
                    android:drawableTop="@drawable/selector_tab_foot"
                    android:text="超市" />

                <RadioButton
                    android:id="@+id/rb_mycenter"
                    style="@style/radio_btn_style"
                    android:drawableTop="@drawable/selector_tab_mycenter"
                    android:text="我的" />
            </RadioGroup>
        </LinearLayout>
    </RelativeLayout>

</TabHost>