<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <!-- home_header -->

    <RelativeLayout
        android:id="@+id/rl_msg_title"
        style="@style/header_style" >

        <TextView
            android:id="@+id/tv_msg_header_title"
            style="@style/header_title_tv_style"
            android:text="消息中心" />

        <ImageButton
            android:id="@+id/ib_msg_goback"
            style="@style/header_left_goback_style" />
    </RelativeLayout>

    <com.viewpagerindicator.TabPageIndicator
        android:id="@+id/msg_indicator"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_msg"
        android:layout_width="match_parent"
        android:layout_height="fill_parent" >
    </android.support.v4.view.ViewPager>

</LinearLayout>